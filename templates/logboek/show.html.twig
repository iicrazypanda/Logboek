{% extends 'base.html.twig' %}

{% block title %}Logboek{% endblock %}

{% block body %}
    <h1>Logboek</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logboek.id }}</td>
            </tr>
            <tr>
                <th>Briefnr</th>
                <td>{{ logboek.briefnr }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ logboek.datum ? logboek.datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Kubs</th>
                <td>{{ logboek.kubs }}</td>
            </tr>
            <tr>
                <th>Laadpunt</th>
                <td>{{ logboek.laadpunt }}</td>
            </tr>
            <tr>
                <th>Vertrektijd</th>
                <td>{{ logboek.vertrektijd ? logboek.vertrektijd|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Eindpunt</th>
                <td>{{ logboek.eindpunt }}</td>
            </tr>
            <tr>
                <th>Evenement</th>
                <td>{{ logboek.evenement }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logboek_index') }}">back to list</a>

    <a href="{{ path('logboek_edit', {'id': logboek.id}) }}">edit</a>

    {{ include('logboek/_delete_form.html.twig') }}
{% endblock %}
